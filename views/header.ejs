        .modal-content {
            background-color: #fff;
            margin: auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }


        /* Custom Design for Drag and Drop */
        .drop-area {
            border: 2px dashed #4d950e;
            padding: 20px;
            text-align: center;
            cursor: pointer;
            color: #4d950e;
            background-color: #f0f8f0;
            transition: background-color 0.3s ease;
        }

        .drop-area:hover {
            background-color: #e6f7e6;
        }

        .image-preview {
            margin-top: 10px;
            text-align: center;
        }

        .image-preview img {
            max-width: 100%;
            height: auto;
            display: block;
            margin: auto;
        }
    </style>


