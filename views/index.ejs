<!-- Container to hold both sections in one row -->
<div class="row">
    <!-- How It Works Section -->
    <div class="col s12 m6">
        <div class="section how-it-works">
            <div class="container">
                <div class="row center">
                    <h4 class="custom-heading">How We Work</h4>
                </div>
                <div class="row" style="display: flex; flex-wrap: wrap; justify-content: center; align-items: center; height: 100%;">
                    <!-- Top item -->
                    <div class="col s12" style="text-align: center; margin-bottom: 20px;">
                        <div style="display: inline-block;">
                            <i class="material-icons large">search</i>
                            <h5>Search for Services</h5>
                            <p>Explore categories or search for the specific services you need.</p>
                        </div>
                    </div>
                    <!-- Bottom left item -->
                    <div class="col s6" style="text-align: center;">
                        <div style="display: inline-block; width: 100%;">
                            <i class="material-icons large">group</i>
                            <h5>Connect with Freelancers</h5>
                            <p>Chat with freelancers or firms and choose the best fit for your project.</p>
                        </div>
                    </div>
                    <!-- Bottom right item -->
                    <div class="col s6" style="text-align: center;">
                        <div style="display: inline-block; width: 100%;">
                            <i class="material-icons large">payment</i>
                            <h5>Pay Safely</h5>
                            <p>Pay through the secure platform when you're satisfied with the work.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Section -->
    <div class="col s12 m6">
        <div class="section contact-section">
            <div class="container">
                <div class="row center">
                    <h4 class="custom-heading">Contact Us</h4>
                </div>
                <div class="row">
                    <div class="col s12">
                        <form action="/contact" method="POST">
                            <div class="input-field">
                                <input type="text" id="name" name="name" required>
                                <label for="name">Your Name</label>
                            </div>
                            <div class="input-field">
                                <input type="email" id="email" name="email" required>
                                <label for="email">Your Email</label>
                            </div>
                            <div class="input-field">
                                <textarea id="message" name="message" class="materialize-textarea" required></textarea>
                                <label for="message">Your Message</label>
                            </div>
                            <div style="display: flex; justify-content: center;">
                                <button type="submit" class="btn waves-effect waves-light">Send Message</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Import jQuery before materialize.js -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

<script>
  $(document).ready(function(){
    $('.carousel.carousel-slider').carousel({
      fullWidth: true,
      indicators: true
    });
    // Auto-slide function
    function autoplay() {
            $('.carousel').carousel('next');
        }
        
    // Set interval for auto-switch every 5 seconds
        setInterval(autoplay, 4000);
  });
</script>

